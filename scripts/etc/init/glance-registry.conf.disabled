# glance-registry service

description     "glance-registry"
author          "Diego Parrilla <diego.parrilla@stackops.com>"

start on (net-device-up IFACE!=lo and local-filesystems and started mysql)
stop on runlevel [016]

env GLANCE_DIR=/usr/bin
env GLANCE_APP=glance-registry
env GLANCE_CONF=/etc/glance/glance-registry.conf

chdir /var/lib/glance

exec su -c "$GLANCE_DIR/$GLANCE_APP $GLANCE_CONF" 2>&1

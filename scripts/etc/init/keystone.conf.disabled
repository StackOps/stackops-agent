# keystone service

description     "keystone"
author          "Diego Parrilla <diego.parrilla@stackops.com>"

start on (net-device-up IFACE!=lo and local-filesystems and started mysql)
stop on runlevel [016]

env KEYSTONE_DIR=/var/lib/keystone/bin
env KEYSTONE_APP=keystone
env KEYSTONE_CONF=/etc/keystone/keystone.conf

chdir /var/lib/keystone

exec su -c "$KEYSTONE_DIR/$KEYSTONE_APP --config-file=$KEYSTONE_CONF" 2>&1

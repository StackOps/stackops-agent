# nova-vncproxy service

description     "nova-vncproxy"
author          "Diego Parrilla <diego.parrilla@stackops.com>"

start on (net-device-up IFACE!=lo and local-filesystems and started mysql)
stop on runlevel [016]

env NOVA_DIR=/var/lib/nova/bin
env NOVA_APP=nova-vncproxy
env NOVA_CONF=/etc/nova/nova-controller.conf
env NOVA_LOG=/var/log/nova

#chdir /var/lib/nova
chdir /var/lib/nova/noVNC

#exec su -c "$NOVA_DIR/$NOVA_APP --flagfile=$NOVA_CONF" >> $NOVA_LOG/$NOVA_APP.log 2>&1
exec su -c "export PYTHONPATH=/var/lib/nova; /var/lib/nova/noVNC/utils/nova-wsproxy.py --flagfile $NOVA_CONF --web . 6080" >> $NOVA_LOG/$NOVA_APP.log 2>&1
